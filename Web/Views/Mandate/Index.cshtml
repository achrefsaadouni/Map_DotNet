@model IEnumerable<Web.Models.MandateViewModels>
@using Web.Models
@{
    ViewBag.Title = "Index";
   bool test = true;
}

<aside class="right-side">
    <section class="content-header">
        <h1>Mandates</h1>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="livicon" data-name="home" data-size="16" data-color="#000"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">Mandates</a>
            </li>
            <li class="active">All Mandates</li>
        </ol>
    </section>
    <section class="content">









        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-success filterable" style="overflow:auto;">
                    <div class="panel-heading">
                        <h3 class="panel-title">
                            <i class="livicon" data-name="tasks" data-size="16" data-loop="true" data-c="#fff" data-hc="white" id="livicon-47" style="width: 16px; height: 16px;"></i> Mandates
                        </h3>
                    </div>
                    <div class="panel-body table-responsive">
                        <div id="table2_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered dataTable no-footer dtr-inline" id="table2" role="grid" aria-describedby="table2_info" style="width: 1177px;">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-sort="ascending" aria-label="Start Date: activate to sort column descending" data-column-index="0">Start Date</th>
                                                <th class="sorting" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-label="End Date: activate to sort column ascending" data-column-index="1">End Date</th>
                                                <th class="sorting" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-label="Project Name: activate to sort column ascending" data-column-index="2">Project Name</th>
                                                <th class="sorting" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-label="Resource Name: activate to sort column ascending" data-column-index="3">Resource Name</th>
                                                <th class="sorting" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-label="Fess: activate to sort column ascending" data-column-index="4">Fees</th>
                                                <th class="sorting" tabindex="0" aria-controls="table2" rowspan="1" colspan="1" style="width: 200px;" aria-label="Gps Name: activate to sort column ascending" data-column-index="5">Gps Name</th>
                                            </tr>
                                        </thead>
                                        <tbody>

    
    @foreach (MandateViewModels item in Model)
    {
        if (test)
        {
            <tr role="row" class="odd">
                <td tabindex="0" class="sorting_1">@item.mandateId.dateDebut.ToString("d")</td>
                <td>@item.mandateId.dateFin.ToString("d")</td>
                <td>@item.projet.projectName</td>
                <td>@item.ressource.firstName @item.ressource.lastName</td>
                <td>@item.montant</td>
                @if (item.gps != null)
                    {
                    <td>
                        @item.gps.firstName @item.gps.lastName
                    </td>}
                    else
                    {
                    <td></td>
                }
            </tr>
            test = false;
        }
        else
        {
            <tr role="row" class="even">
                <td tabindex="0" class="sorting_1">@item.mandateId.dateDebut.ToString("d")</td>
                <td>@item.mandateId.dateFin.ToString("d")</td>
                <td>@item.projet.projectName</td>
                <td>@item.ressource.firstName @item.ressource.lastName</td>
                <td>@item.montant</td>
                @if (item.gps != null)
                    {
                    <td>
                        @item.gps.firstName @item.gps.lastName
                    </td>}
                    else
                    {
                    <td></td>
                }
            </tr>
            test = true ;

        }


    }

    </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </section>

</aside>
<!-- right-side -->