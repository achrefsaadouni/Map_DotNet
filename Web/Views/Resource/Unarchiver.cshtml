@model Web.Models.ResourceViewModel


<aside class="right-side">
    <section class="content-header">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="@Url.Action("listeResource")" style="color:forestgreen">Resource List</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" style="color:forestgreen">Resource List Archived</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("AddResource")" style="color:forestgreen">Add Resource</a>
            </li>


        </ul>

    </section>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <section class="content">
            <div class="row">
                <div class="col-lg-12">
                    <div class="tab-content mar-top">
                        <div id="tab1" class="tab-pane fade active in">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="panel">
                                        <div class="panel-heading">
                                            <h3 class="panel-title">
                                                User Profile
                                            </h3>
                                        </div>
                                        <div class="panel-body">
                                            <div class="col-md-4">
                                                <div class="text-center">
                                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                                        <div class="fileinput-new thumbnail img-file">
                                                            <img src="@Url.Content(Model.picture)" alt="IMAGES" width="200" class="img-responsive" height="150">
                                                        </div>
                                                        <div class="form-group">
                                                            <div class="col-md-offset-2 col-md-10">
                                                                <input type="submit" value="Save" class="btn btn-default" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="panel-body">
                                                    <div class="table-responsive">
                                                        <table class="table table-bordered table-striped" id="users">
                                                            <tr>
                                                                <td>First name</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.firstName)</p>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Last name</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.lastName)</p>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>E-mail</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.email)</p>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Seniority</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.seniority)</p>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Work Profil</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.workProfil)</p>
                                                                </td>
                                                            </tr>

                                                            <tr>
                                                                <td>Job Type</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.jobType)</p>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td>Availability</td>
                                                                <td>
                                                                    <p class="editable">@Html.DisplayFor(model => model.availability)</p>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    <!-- content -->
</aside>
</section>
<!-- content -->
</aside>
