@model Web.Models.ProjectViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <head>

        <link href="@Url.Content("~/Content/")css/app.css" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/")vendors/bootstrap-multiselect/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")vendors/select2/css/select2.min.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")vendors/select2/css/select2-bootstrap.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")vendors/selectize/css/selectize.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")vendors/selectize/css/selectize.bootstrap3.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")vendors/iCheck/css/all.css" rel="stylesheet" type="text/css">
        <Link href="@Url.Content("~/Content/")vendors/iCheck/css/line/line.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")css/pages/formelements.css" rel="stylesheet" type="text/css">
        <link href="@Url.Content("~/Content/")css/pages/customform_elements.css" rel="stylesheet" type="text/css">
        <!--end of page level css-->
    </head>
    <aside class="right-side">
    <section class="content-header">
        <h1>Projects</h1>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="livicon" data-name="home" data-size="16" data-color="#000"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">Projects</a>
            </li>
        </ol>
    </section>
    <section class="content">
    <div>
        <a href="@Url.Action("Index", "Project")">
            <button class="btn btn-md btn-success" value="btn-md" type="button"  style="margin-left: 200px">
                <i class="fa fa-fw fa-arrow-left"></i> Back to list
            </button>
        </a>
    </div>
    <div class="panel panel-info" style="width: 700px;margin-left: 200px">
        <div class="panel-heading">
            <h3 class="panel-title">
                <i class="fa fa-fw fa-plus"></i> Add new Project
            </h3>

        </div>
        <div class="panel-body">
            <form method="get" name="frmOnline" id='form_validation' onsubmit="return Validation()" enctype="multipart/form-data" action="#">

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Name :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.projectName, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Address :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Start date :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.startDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">End date :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.endDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                <br />


                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Type :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownList("TypeProject", (IEnumerable<SelectListItem>)ViewBag.TypeProject, new { Class = "form-control select2" })
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Company :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.DropDownList("CLIENT", new SelectList(ViewBag.CLIENT, "id", "nameSociety"), new { Class = "form-control" })
                        </div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label class="control-label">Picture :</label>
                        </div>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.picture, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                <div class="form-group">
                    <label class="control-label">Skills :</label>
                    <input type="text" name ="tags" id="selectize-tags2" class="demo-default" value="science,biology,chemistry,physics">
                </div>
                </div>

                <div class="col-md-12 mar-10">
                    <div class="col-xs-6 col-md-6">   
                        <input type="submit" value="Next Step" name="btn" class="btn btn-primary" style="margin-left: 152px" />              
                    </div>
                </div>
            </form>
        </div>
    </div>

    <script src="~/Scripts/js/app.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/bootstrap-multiselect/js/bootstrap-multiselect.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/select2/js/select2.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/selectize/js/standalone/selectize.min.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/iCheck/js/icheck.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/bootstrap-switch/js/bootstrap-switch.js" type="text/javascript"></script>
    <script src="~/Scripts/vendors/switchery/js/switchery.js" type="text/javascript"></script>
    <script src="~/Scripts/js/pages/custom_elements.js" type="text/javascript"></script>

        </section>

    </aside>
}