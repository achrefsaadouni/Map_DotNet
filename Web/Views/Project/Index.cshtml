@model IEnumerable<Web.Models.ProjectViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="@Url.Content("~/Content/")css/app.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/")vendors/simple-line-icons/css/simple-line-icons.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/")vendors/ionicons/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/")css/pages/icon.css" rel="stylesheet" type="text/css" />
</head>

@using (Html.BeginForm())
{
    <aside class="right-side">
        <section class="content-header">
            <h1>Projects</h1>
            <ol class="breadcrumb">
                <li>
                    <a href="index.html">
                        <i class="livicon" data-name="home" data-size="16" data-color="#000"></i> Dashboard
                    </a>
                </li>
                <li>
                    <a href="#">Projects</a>
                </li>
            </ol>
        </section>
        <section class="content">
            <div class="modal fade" id="delete_confirm" tabindex="-1" role="dialog" aria-labelledby="user_delete_confirm_title" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                            <h4 class="modal-title" id="user_delete_confirm_title">
                                Archive project
                            </h4>
                        </div>
                        <div class="modal-body">
                            Are you sure to archive this project?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                            <input type="submit" class="btn btn-danger" value="Archive" formmethod="post" formaction=@Url.Action("Archive", "Project") />
                        </div>
                    </div>
                </div>
            </div>
            <p>

                <a href="@Url.Action("Create","Project")"><button class="btn btn-md btn-success" value="btn-md" type="button" style="margin-left: 30px">Create new</button></a>

            </p>
            <div class="portlet box danger" style="width: 1000px; margin-left:30px">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="livicon" data-name="align-justify" data-size="16" data-loop="true" data-c="#fff" data-hc="white"></i> Project List
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-scrollable">
                        <table class="table table-striped table-bordered table-advance table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Name
                                    </th>
                                    <th class="hidden-xs">
                                        Adress
                                    </th>
                                    <th>
                                        Start date
                                    </th>
                                    <th>
                                        End date
                                    </th>
                                    <th>
                                        Type
                                    </th>
                                    <th>
                                        Nb resource Levio
                                    </th>
                                    <th>
                                        Nb other resource
                                    </th>
                                    <th style="text-align: center">
                                        Action
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.projectName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.address)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.startDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.endDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.projectType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.levioNumberResource)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.totalNumberResource)
                                        </td>
                                        <td>
                                            <span><a href="@Url.Action("Details","Project",new {id = item.id})"><i class="livicon" data-name="info" data-size="21" data-loop="true" data-c="#F39C11" data-hc="#F39C11"></i></a></span>
                                            <span><a href="@Url.Action("Edit","Project",new {id = item.id})"><i class="livicon" data-name="edit" data-size="20" data-loop="true" data-c="#418bca" data-hc="#418bca"></i></a> </span>
                                            <input type="hidden" value="@item.id" name="hiddenId" />
                                            <span><a href="#" data-toggle="modal" data-target="#delete_confirm"><i class="livicon" data-name="remove-alt" data-size="19" data-loop="true" data-c="#ef6f6c" data-hc="#ef6f6c"></i></a></span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </section>

    </aside>
}